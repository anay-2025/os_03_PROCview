#include <stdio.h>
#include <stdlib.h>

int main() {
    FILE *fp1, *fp2, *fp3;
    char ch;

    // Run system commands
    system("ps aux > x1.txt");
    system("ps -eLf > x2.txt");

    // Open files
    fp1 = fopen("x1.txt", "r");
    fp2 = fopen("x2.txt", "r");
    fp3 = fopen("merged.txt", "w");

    if (fp1 == NULL || fp2 == NULL || fp3 == NULL) {
        printf("Error opening files\n");
        return 1;
    }
  fprintf(fp3, "=========== OUTPUT OF ps aux ===========\n\n");

    // Copy contents of x1.txt
    while ((ch = fgetc(fp1)) != EOF) {
        fputc(ch, fp3);
    }

    fprintf(fp3, "\n\n=========== OUTPUT OF ps -eLf ===========\n\n");

    // Copy contents of x2.txt
    while ((ch = fgetc(fp2)) != EOF) {
        fputc(ch, fp3);
    }

    fclose(fp1);
    fclose(fp2);
    fclose(fp3);

    // Display merged file
    system("cat merged.txt");

    return 0;
}
