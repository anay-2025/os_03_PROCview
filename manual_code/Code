#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <fcntl.h>
#include <sys/wait.h>

int main() {
    int fd1 = open("x1.txt", O_CREAT | O_WRONLY | O_TRUNC, 0644);
    if (fork() == 0) {
        dup2(fd1, STDOUT_FILENO);
        execlp("ps", "ps", "aux", NULL);
        exit(1);
    }
    wait(NULL);
    close(fd1);
    int fd2 = open("x2.txt", O_CREAT | O_WRONLY | O_TRUNC, 0644);
    if (fork() == 0) {
        dup2(fd2, STDOUT_FILENO);
        execlp("ps", "ps", "-eLf", NULL);
        exit(1);
    }
    wait(NULL);
    close(fd2);

    FILE *fp1 = fopen("x1.txt", "r");
    FILE *fp2 = fopen("x2.txt", "r");
    FILE *fp3 = fopen("merged.txt", "w");

    char ch;

    fprintf(fp3, "=========== OUTPUT OF ps aux ===========\n\n");
    while ((ch = fgetc(fp1)) != EOF)
        fputc(ch, fp3);

    fprintf(fp3, "\n\n=========== OUTPUT OF ps -eLf ===========\n\n");
    while ((ch = fgetc(fp2)) != EOF)
        fputc(ch, fp3);

    fclose(fp1);
    fclose(fp2);
    fclose(fp3);

    execlp("cat", "cat", "merged.txt", NULL);

    return 0;
}
    
